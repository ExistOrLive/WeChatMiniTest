/* pages/search.wxss */
@import "../../template/RepoListItemTemplate/RepoListItemTemplate.wxss";
@import "../../template/UserListItemTemplate/UserListItemTemplate.wxss";

view {
  display: flex;
  flex-wrap: nowrap;
}

.searchBar {
  margin-left: 30rpx;
  margin-right: 30rpx;
  background-color:ghostwhite;
  flex-direction: row;
  width: 690rpx;
  height: 6vh;
  flex-grow: 0;
}

input {
  border-radius: 10rpx;
  align-items: center;
  width: 500rpx;
  height: 6vh;
  border: 1rpx solid;
  color:black;
  box-sizing: border-box;
  margin-right: 20rpx;
  display: inline-block;
  padding-left: 20rpx;
  font-weight: 400;
  font-size: 35rpx;
}

#searchButton {
  width: 170rpx !important;
  height: 6vh !important;
  align-items: center;
  box-sizing: border-box;
  text-align: center;
  display: inline-block;
  padding: 20rpx;
  background-color: rgb(0, 204, 255);
}

#typeList {
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 5vh;
  width: 690rpx;
  padding-top: 1.5vh;
}

#searchList {
  margin-top: 20rpx;
  width: 100%;
  height: 90vh;
}

.typeButton_normal {
  width: 33% !important;
  background-color: white;
  color: gray;
  font-weight: 400;
}

.typeButton_Selected{
  width: 33% !important;
  background-color: white;
  font-weight: 900;
  font-size: 35rpx;
}