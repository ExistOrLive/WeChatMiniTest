/* pages/search.wxss */
view {
  display: flex;
}

.searchBar {
  margin-left: 30rpx;
  margin-right: 30rpx;
  background-color:ghostwhite;
}

input {

  align-items: center;
  width: 700rpx;
  height: 80rpx;
  border:1rpx solid;
  color:black;
  box-sizing: border-box;
}

button {
  display: flex;
  text-align: center;
  border:1rpx solid;
  color: black;
  height: 80rpx;
  flex-shrink: 2;
  align-items: center;
  border-radius: 10rpx;
  padding: 0rpx;
  box-sizing: border-box;
}


.avatar {
  width: 100rpx;
  height: 100rpx;
  box-sizing: border-box;
  border-radius: 50rpx;
  flex-shrink: 0;
}

.repoName {
  width: 500rpx;
  font-size: 40rpx;
  font-weight: 600;
  padding-left: 20rpx;
  padding-right: 20rpx;
  overflow: hidden;   /*超出隐藏*/
  text-overflow: ellipsis; /*超出截断省略号*/
  white-space: nowrap;  /*不换行*/
}

.userName {
  font-size: 30rpx;
  font-weight: 400;
  padding-left: 20rpx;
}

.desc {
  font-size: 25rpx;
  font-weight: 400;
  margin-top: 20rpx;
}

.repoItem {
  flex-direction: column;
  margin: 30rpx 30rpx 0rpx 30rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  background-color: rgb(233, 229, 229);
}