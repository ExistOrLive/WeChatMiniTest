/* components/IssueListItem/IssueListItem.wxss */

/* 在组件wxss中不应使用ID选择器、属性选择器和标签名选择器 */
/*这里的样式只应用于这个自定义组件  */

.IssueListItemContainer {
  position: relative;
  left: 30rpx;
  width: 690rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  background-color: rgb(233, 229, 229);
  box-sizing: border-box;
  margin: 0rpx 0rpx 30rpx 0rpx;
}

.Issue_Title {
  display: block;
  font-size: 40rpx;
  font-weight: 500;
}

.Issue_Body {
  margin-top: 20rpx;
  display: block;
  width: 100%;
  overflow: hidden;   /*超出隐藏*/
  text-overflow: ellipsis; /*超出截断省略号*/
  /* white-space: nowrap;  不换行 */
}

